{
  "git": {
    "changelog": "git log --pretty=format:\"* %s (%h)\" ${from}...${to}",
    "requireBranch": "master",
    "commitMessage": "chore: Release v${version}"
  },
  "github": {
    "release": true,
    "releaseName": "Release v${version}"
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p"
  }
}
